<h1>
  Director #<%= @details.id %> details
</h1>

<a href="/directors">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @details.id %>">
  Delete director
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @details.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @details.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @details.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @details.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@details.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@details.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>
  Filmography
</h2>

<table border="1">
<tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

<% @filmography.each do |a_film| %>
  <tr>
    <td>
      <%= a_film.id %>
    </td>
    <td>
      <img src="http://robohash.org/<%= a_film.image %>?set=set4">
    </td>
    <td>
      <%= a_film.title %>
    </td>
    <td>
      <%= a_film.year %>
    </td>
    <td>
      <%= @details.name %>
    </td>
    <td>
      <a href="/movies/<%= a_film.id %>">
        Show details
      </a>
    </td>
<% end %>
</table>
