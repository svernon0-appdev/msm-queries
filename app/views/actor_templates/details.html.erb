<h1>
  Actor #<%= @details.id %> details
</h1>

<a href="/actors">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @details.id %>">
  Delete actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @details.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @details.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @details.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @details.image %>?set=set2">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@details.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@details.updated_at) %> ago
  </dd>
</dl>

<hr>

<hr>

<h2>
  Filmography
</h2>

<table border="1">
<tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

<% @characters.each do |a_character| %>
  <tr>
    <td>
      <%= Movie.where({ :id => a_character.movie_id }).first.title %>
    </td>
    <td>
      <%= Movie.where({ :id => a_character.movie_id }).first.year %>
    </td>
    <td>
      <%= Director.where({ :id => Movie.where({ :id => a_character.movie_id }).first.director_id }).first.name %>
    </td>
    <td>
      <%= a_character.name %>
    </td>
    <td>
      <a href="/movies/<%= Movie.where({ :id => a_character.movie_id }).first.id %>">
        Show details
      </a>
    </td>
<% end %>
</table>
